{% extends 'layouts/adminlayout.html.twig' %}
{% block style %}
    <link rel="stylesheet" href="{{ asset('css/request.css') }}">
{% endblock %}

{% block content %}
<div class="bradcam_area bradcam_bg_1" style="background-image: url({{ asset("img/banner/bradcam.png") }}); width:100%; height:60vh;">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="bradcam_text text-center">
                    <h3>Request Details</h3>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="recepie_details_area">

    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-6 col-md-6">
                <div class="recepies_thumb">
                    <img src="{{ asset('img/recepie/' ~ request.Image) }}" alt="food">
                </div>
            </div>
            <div class="col-xl-6 col-md-6">
                <div class="recepies_info">
                    <h3>{{ request.Name }}</h3>
                    <div class="rescepies_details">
                        <ul>
                            <li><p><strong>Time</strong> :{{ request.Time }} Mins </p></li>
                            <li><p><strong>Category</strong> : {{ request.Type }} </p></li>
                            <li><h3> Ingredients</h3></li>
                            <li><p> {{request.Ingredients}} </p></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="recepies_text">
                    <p>{{ request.Description }}</p>
                </div>
            </div>
                <div class="row">
                    <div class="col">
                        <a href="{{ path('acceptRequest', {'id': request.id}) }}" class = "accept btn-request">Accept</a>
                    </div>
                    <div class="col">
                        <a href="{{ path('deleteRequest', {'id': request.id}) }}" class="delete btn-request">Delete</a>
                    </div>
                </div>
        </div>

    </div>
</div>
{% endblock %}