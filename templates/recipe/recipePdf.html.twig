<div class="header" style="display:flex;text-align:center; font-family:\'Gill Sans\', \'Gill Sans MT\', Calibri, \'Trebuchet MS\', sans-serif;">
    <h1>{{ recipe.Name}}</h1>
    <h3>By FoodHub</h3>
</div>
<div class="container" style="display:flex;">
    <div class="text">
        <div class="Ingredients">
            <h3 style="margin-left:10px;">Ingredients:</h3>
            <p style="margin:10px 40px;">{{ recipe.Ingredients}}</p>
        </div>
        <div class="description">
            <h3 style="margin-left:10px;">Steps:</h3>
            <p style="margin:10px 40px;">{{ recipe.Description}}</p>
        </div>
        <img style="height: 350px; width: 300px; border-radius: 5px; margin-left: 200px;" src="data:image/png;base64,{{ recipeImage }}" alt="Recipe Image">
        <h2 style="text-align:center;">Enjoy The Food!!</h2>
    </div>
</div>'